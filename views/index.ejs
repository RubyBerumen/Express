<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="theme-color" content="#000000" />
    <title>Alumnos</title>

    <link rel="stylesheet" href="./css/bootstrap.min.css">
</head>

<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="">
                    <img src="images/estudiantes.png" class="img-fluid"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07"
                    aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarsExample07">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="">INICIO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="" target="">Academico</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contacto</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-12">
                <h1 style="font-size: 28px; margin-top: 50px;" class=" text-center">Servicios Escolares </h1>
                <div class="col-md-10">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="content-box-large">

                                <div class="panel-heading">
                                    <div class="panel-title">
                                        <h2>Listado de Alumnos</h2>
                                    </div>

                                </div>

                                <div class="panel-body">

                                    <% if (locals.data !='' ) { %>

                                        <div class="alert alert-primary" role="alert">
                                            <%= locals.data %>
                                        </div>

                                     <% } %>

                                    <a href="/agregar" class="btn btn-success mt-4 ml-3"> AGREGAR
                                    </a>

                                    <section class="example mt-4">

                                        <div class="table-responsive" id="tabla_alumnos">
                                             <!-- CARGAR Tabla HTML -->
                                        </div>
                                    </section>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

    </div>

    <footer class="text-muted mt-3 mb-3">
        <div align="center">
            <hr />
            FOOTER
        </div>
    </footer>

    <script type="text/javascript">
        function confirmar_eliminacion() {
            return confirm("Estas seguro de Eliminar?");
        }
    </script>

    <!-- JS Bootstrap  -->
    <script type="text/javascript" src="./js/bootstrap.min.js"></script>

    <!-- CÃ³digo Para Mostrar la Tabla con los datos -->
    <script type="text/javascript">
        fetch("http://localhost:3000/api/v1/alumnos").then(response => {
            if (response.ok) {
                return response.json();
            }
        }).then(data => {
            if (data) {
                console.log(data);

                const registros = data;
                let result = `<table class='table table-striped table-bordered table-hover text-center'><thead>
                              <tr>
                                <th>Numero de Control</th>
                                <th>Nombre</th>
                                <th>Acciones</th>
                              </tr>
                              </thead><tbody>`;
                registros.forEach((e) => {
                    result += `<tr>
                        <td class=v-align-middle>${e.num_control}</td>
                        <td class=v-align-middle>${e.nombre}</td>
                        <td class=v-align-middle>

                          <form action="http://localhost:3000/api/v1/alumnos/eliminar/${e.num_control}" 
                                          method="POST" onsubmit="return confirmar_eliminacion()">        
                            <a href="/consultas?nc=${e.num_control}" class="btn btn-dark">Detalles</a>
                            <a href="/cambios?nc=${e.num_control}" class="btn btn-primary">Editar</a>
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                          </form>  

                        </td>
                      </tr>`


                });
                result += `</tbody></table>`;
                document.getElementById("tabla_alumnos").innerHTML = result;


            };

        }
        ).catch(err => console.error(err));      
    </script>
</body>

</html>